



    <div class="col-xs-10">
      <div class="text-center"><h2>Product</h2></div>
      <div class="col-xs-offset-3 col-xs-6">
        <%= link_to "Create Product", new_admin_product_path, class: "btn btn-primary btn-lg btn-block" %>
      </div>
      <div class="col-xs-12 text-center">
        <div class="table-responsive scrollable-table">

          <table class="table table-striped">
            <tr>
              <td>ID</td>
              <td>Name</td>
              <td>Price</td>
              <td>Category</td>
              <td>Show</td>
              <td>Edit</td>
              <td>Delete</td>
            </tr>
            
            <% @products.each do |product| %>
              <tr>
                <td><%= product.id %></td>
                <td><%= product.name %></td>
                <td><%= product.price %></td>
                <td><%= link_to product.category.name, admin_category_path(product.category.id) %></td>
                <td><%= link_to "SHOW", admin_product_path(product) %></td>
                <td><%= link_to "EDIT", edit_admin_product_path(product) %></td>
                <td><%= link_to "DELETE", admin_product_path(product), method: :delete, data: {confirm: "Are you sure?"} %></td>
              </tr>
            <% end %>
          </table>

        </div>
      </div>
    </div>


  </div>
</div>